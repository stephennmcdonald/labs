package {	import org.tomasino.encoding.VIC;	import org.tomasino.encoding.VICValidate;	import com.leiner.calendar.datechooser.DateChooser;	import flash.events.Event;	import flash.display.Sprite;	public class VICDecoder extends Sprite	{		public var vic:VIC = new VIC ();		public var dc:DateChooser;				private var _date:Date = new Date(1752, 8, 3);				public function VICDecoder()		{			song.addEventListener(Event.CHANGE, validate);			rawCode.addEventListener(Event.CHANGE, validate);			personalID.addEventListener(Event.CHANGE, validate);						personalID.restrict = "0-9";			personalID.maxChars = 2;			dc = new DateChooser()			dc.y = 176; 			dc.x = 166;			addChild(dc);						dc.date = _date;			dc.addEventListener( Event.CHANGE, validate );			validate();		}		public function validate(e:Event = null):void		{			if(VICValidate.decode(song.text,rawCode.text,personalID.text,dc.selectedDate)) update();		}				private function update():void		{			var _s = song.text;			_s = _s.replace(VICValidate.standardRegExp, '');						var decode:String = vic.decode(_s, dc.selectedDate, personalID.text, rawCode.text);			msg.text = decode;		}	}}
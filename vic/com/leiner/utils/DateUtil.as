package com.leiner.utils{	public class DateUtil	{		static var DATE_PATTERN:RegExp = /(\d\d\d\d)-?(\d\d)-?(\d\d)T?(\d\d):?(\d\d)(?::?(\d\d)(\.\d+)*?)?(Z|[+-])(?:(\d\d):?(\d\d))?/;				public static function iso8601 ( iso8601Date:String ):Array		{			return DATE_PATTERN.exec(iso8601Date); 		}				public static function maxdays ( date:Date ):int 		{			var tmp = cloneDate(date);			tmp.date = 1;			tmp.month += 1;			tmp.date-= 1;			return tmp.date;					}				public static function getFirstDay ( date:Date ):Date		{				return new Date(date.fullYear, date.month, 1);		}				public static function cloneDate ( date:Date ):Date		{			return new Date ( date.toString() );		}		}}